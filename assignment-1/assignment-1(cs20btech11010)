import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import bernoulli
from scipy.stats import norm
from scipy.stats import binom
 import random 

count=0;
z=0
n=15   # n i s total number of oranges
q=3    # a is total number of bad oranges

a=0
while a<1000000:
   p=random.randint(1,n)
   if p>q:
      count+=1
   a+=1
p1=count/a
 print(f'the probabilty that good orange is to be picked in the first draw is : {count/a}')     

a=0
count=0

while a<1000000:
   p=random.randint(1,n-1)
   if p>q:
      count+=1
   a+=1
 print(f'the probabilty that good orange is to be picked in the second draw is : {count/a}')
 p2=count/a
a=0
count=0

while a<1000000:
   p=random.randint(1,n-2)
   if p>q:
      count+=1
   a+=1
 print(f'the probabilty that good orange is to be picked in the third draw is : {count/a}')
p3=count/a
print(f'the probability that the box is approved is :{(p1)*p2*p3}')# as p1